<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyroscope:"
        android:id="@+id/gyroscope"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X: "
        android:id="@+id/label_gyro_x"
        android:layout_below="@+id/gyroscope" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" -"
        android:id="@+id/value_gyro_x"
        android:layout_below="@+id/gyroscope"
        android:layout_toRightOf="@+id/label_gyro_x"
        android:layout_toEndOf="@+id/label_gyro_x" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y: "
        android:id="@+id/label_gyro_y"
        android:layout_below="@+id/label_gyro_x"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" -"
        android:id="@+id/value_gyro_y"
        android:layout_below="@+id/label_gyro_x"
        android:layout_toRightOf="@+id/label_gyro_y"
        android:layout_toEndOf="@+id/label_gyro_y" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z: "
        android:id="@+id/label_gyro_z"
        android:layout_below="@+id/label_gyro_y"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" -"
        android:id="@+id/value_gyro_z"
        android:layout_below="@+id/label_gyro_y"
        android:layout_toRightOf="@+id/label_gyro_z"
        android:layout_toEndOf="@+id/label_gyro_z" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accelerometer:"
        android:id="@+id/accelerometer"
        android:layout_below="@+id/label_gyro_z"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X: "
        android:id="@+id/label_acc_x"
        android:layout_below="@+id/accelerometer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" -"
        android:id="@+id/value_acc_x"
        android:layout_below="@+id/accelerometer"
        android:layout_toRightOf="@+id/label_gyro_x"
        android:layout_toEndOf="@+id/label_gyro_x" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y: "
        android:id="@+id/label_acc_y"
        android:layout_below="@+id/label_acc_x"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" -"
        android:id="@+id/value_acc_y"
        android:layout_below="@+id/label_acc_x"
        android:layout_toRightOf="@+id/label_acc_x"
        android:layout_toEndOf="@+id/label_acc_x" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z :"
        android:id="@+id/label_acc_z"
        android:layout_below="@+id/label_acc_y"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" -"
        android:id="@+id/value_acc_z"
        android:layout_below="@+id/label_acc_y"
        android:layout_toRightOf="@+id/label_acc_y"
        android:layout_toEndOf="@+id/label_acc_y" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Server"
        android:id="@+id/buttonStart"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"
        android:layout_alignTop="@+id/value_gyro_z"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Server"
        android:id="@+id/buttonStop"
        android:layout_alignBottom="@+id/value_acc_z"
        android:layout_alignLeft="@+id/buttonStart"
        android:layout_alignStart="@+id/buttonStart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server Status : "
        android:id="@+id/serverStatus"
        android:layout_above="@+id/value_gyro_x"
        android:layout_alignLeft="@+id/buttonStart"
        android:layout_alignStart="@+id/buttonStart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Runned"
        android:id="@+id/ServerStatus_value"
        android:layout_alignTop="@+id/value_gyro_x"
        android:layout_alignRight="@+id/buttonStop"
        android:layout_alignEnd="@+id/buttonStop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CommentTextView"
        android:layout_below="@+id/value_acc_z"
        android:layout_alignRight="@+id/serverStatus"
        android:layout_alignEnd="@+id/serverStatus"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IP address and port"
        android:id="@+id/ipLable"
        android:layout_alignTop="@+id/CommentTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ipValue"
        android:text=" - "
        android:layout_below="@+id/ipLable"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>