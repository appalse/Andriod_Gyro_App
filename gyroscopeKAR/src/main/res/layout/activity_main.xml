<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyroscope:"
        android:id="@+id/gyroscope"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X: "
        android:id="@+id/label_gyro_x"
        android:layout_below="@+id/gyroscope" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" -"
        android:id="@+id/value_gyro_x"
        android:layout_below="@+id/gyroscope"
        android:layout_toRightOf="@+id/label_gyro_x"
        android:layout_toEndOf="@+id/label_gyro_x" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y: "
        android:id="@+id/label_gyro_y"
        android:layout_below="@+id/label_gyro_x"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" -"
        android:id="@+id/value_gyro_y"
        android:layout_below="@+id/label_gyro_x"
        android:layout_toRightOf="@+id/label_gyro_y"
        android:layout_toEndOf="@+id/label_gyro_y" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z: "
        android:id="@+id/label_gyro_z"
        android:layout_below="@+id/label_gyro_y"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" -"
        android:id="@+id/value_gyro_z"
        android:layout_below="@+id/label_gyro_y"
        android:layout_toRightOf="@+id/label_gyro_z"
        android:layout_toEndOf="@+id/label_gyro_z" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accelerometer:"
        android:id="@+id/accelerometer"
        android:layout_below="@+id/label_gyro_z"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X: "
        android:id="@+id/label_acc_x"
        android:layout_below="@+id/accelerometer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" -"
        android:id="@+id/value_acc_x"
        android:layout_below="@+id/accelerometer"
        android:layout_toRightOf="@+id/label_gyro_x"
        android:layout_toEndOf="@+id/label_gyro_x" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y: "
        android:id="@+id/label_acc_y"
        android:layout_below="@+id/label_acc_x"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" -"
        android:id="@+id/value_acc_y"
        android:layout_below="@+id/label_acc_x"
        android:layout_toRightOf="@+id/label_acc_x"
        android:layout_toEndOf="@+id/label_acc_x" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z :"
        android:id="@+id/label_acc_z"
        android:layout_below="@+id/label_acc_y"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" -"
        android:id="@+id/value_acc_z"
        android:layout_below="@+id/label_acc_y"
        android:layout_toRightOf="@+id/label_acc_y"
        android:layout_toEndOf="@+id/label_acc_y" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Server"
        android:id="@+id/buttonStart"
        android:layout_below="@+id/value_gyro_x"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Server"
        android:id="@+id/buttonStop"
        android:layout_below="@+id/value_acc_x"
        android:layout_alignLeft="@+id/buttonStart"
        android:layout_alignStart="@+id/buttonStart" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Data"
        android:id="@+id/buttonAddData"
        android:layout_below="@+id/buttonStop"
        android:layout_toRightOf="@+id/accelerometer"
        android:layout_toEndOf="@+id/accelerometer"
        android:layout_marginTop="80dp" />
</RelativeLayout>